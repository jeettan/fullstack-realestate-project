generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model properties {
  id                 Int       @id @default(autoincrement())
  title              String?   @db.VarChar(45)
  description        String?   @db.VarChar(400)
  price              Int?
  address            String?   @db.VarChar(45)
  lat                Float?
  lng                Float?
  date_listed        DateTime? @db.Date
  property_type      String?   @db.VarChar(45)
  features           String?   @db.VarChar(150)
  bedrooms           Int?
  plot_size          Int?
  parking_spots      Int?
  storeys            Int?
  completion_year    Int?
  developer_name     String?   @db.VarChar(45)
  user_id            Int
  featured_image_url String?   @db.VarChar(400)
  folder_id          String?   @db.VarChar(45)
  agent_name         String?   @db.VarChar(45)
  agent_contact      String?   @db.VarChar(45)
  line_id            String?   @db.VarChar(45)
}

model users {
  id         Int     @id @default(autoincrement())
  username   String? @unique(map: "username_UNIQUE") @db.VarChar(45)
  password   String? @db.VarChar(100)
  first_name String? @db.VarChar(45)
  last_name  String? @db.VarChar(45)
  email      String? @db.VarChar(45)
}
